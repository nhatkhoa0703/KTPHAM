@using System.Web.Mvc
@using System.Web.Mvc.Html

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KTPHAM Restaurant</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
</head>
<body>
    <!-- Lớp phủ nền -->
    <div class="background-overlay"></div>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("KTPHAM Restaurant", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Customers", "Index", "Customers", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("MenuItems", "Index", "MenuItems", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Orders", "Index", "Orders", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Payments", "Index", "Payments", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Reservations", "Index", "Reservations", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">KTPHAM Restaurant</a>
            <div class="collapse navbar-collapse justify-content-end">
                @if (Session["UserID"] != null)
                {
                    <span class="navbar-text me-3">Welcome, @Session["Username"]</span>
                    <a href="/Auth/Logout" class="btn btn-danger btn-sm">Logout</a>
                }
                else
                {
                    <a href="/Auth/Login" class="btn btn-primary btn-sm">Login</a>
                }
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - KTPHAM Restaurant</p>
        </footer>
    </div>

    <style>
        body {
            background: url('/Content/Images/background.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
            color: white;
        }

        .background-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5); /* Lớp phủ màu đen mờ */
            z-index: 1;
            pointer-events: none;
        }

        .container.body-content, nav {
            position: relative;
            z-index: 2; /* Nội dung nằm trên lớp phủ */
        }

        footer {
            color: white;
        }

        .btn-outline-dark {
            color: white;
            border-color: white;
            background-color: transparent;
            transition: background-color 0.3s, color 0.3s;
        }

            .btn-outline-dark:hover {
                color: black;
                background-color: white;
                border-color: white;
            }

        .table a {
            color: #ff5733; /* Đặt màu chữ (ví dụ: cam) */
            text-decoration: none; /* Loại bỏ gạch chân */
        }

            .table a:hover {
                color: #c70039; /* Màu chữ khi di chuột */
                text-decoration: underline; /* Thêm gạch chân khi di chuột */
            }

        .table a, a[href*="Create"] {
            color: #ff5733; /* Đặt màu chữ */
            text-decoration: none; /* Loại bỏ gạch chân */
        }

            .table a:hover, a[href*="Create"]:hover {
                color: #c70039; /* Màu chữ khi di chuột */
                text-decoration: underline; /* Thêm gạch chân khi di chuột */
            }

        .table th, .table td {
            color: white; /* Đổi màu chữ thành trắng */
        }

        .table {
            border-color: white; /* Đổi màu viền bảng nếu cần */
        }
    </style>

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
